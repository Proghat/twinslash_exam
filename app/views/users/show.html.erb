<div class="page-header">
  <h1>User</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name</dt>
  <dd><%= @user.name %></dd>
  <dt>Email</dt>
  <dd><%= @user.email %></dd>
  <dt>Role</dt>
  <dd><%= @user.role %></dd>
</dl>

<div class="form-actions">
  <%= link_to 'Edit', edit_user_path(@user), class: 'btn' %>
  <% if can? :destroy, @user %>
    <%= link_to 'Destroy', user_path(@user), method: 'delete',
      data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
  <% end %>
</div>
